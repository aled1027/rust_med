{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Medical Note Generator",
  "version": "0.1.0",
  "identifier": "com.medical.notegenerator",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Medical Note Generator", 
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../binaries/whisperfile.exe",
      "../binaries/llamafile.exe", 
      "../binaries/models/*"
    ]
  }
}